<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Business Directory</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    header {
      background: linear-gradient(90deg, #0d6efd, #6610f2);
      color: white;
      padding: 2rem;
      font-size: 2rem;
      font-weight: 800;
      text-align: center;
      text-transform: uppercase;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .sidebar {
      background-color: #f8f9fa;
      height: 100vh;
      padding-top: 2rem;
      position: sticky;
      top: 0;
    }

    .sidebar a {
      display: block;
      padding: 1rem 1.5rem;
      color: #333;
      text-decoration: none;
      font-weight: 500;
    }

    .sidebar a:hover {
      background-color: #e2e6ea;
    }

    .main-content {
      padding: 2rem;
    }

    .category-card {
      margin-bottom: 1rem;
    }
  </style>
</head>
<body>

  <!-- Header -->
  <header>
    Business Directory
  </header>

  <!-- Main layout -->
  <div class="container-fluid">
    <div class="row">
      
      <!-- Sidebar Menu -->
      <nav class="col-md-3 col-lg-2 d-md-block sidebar">
        <a href="#home">Home</a>
        <a href="#categories">Categories</a>
        <a href="#add-business">Add Business</a>
        <a href="#about">About</a>
      </nav>

      <!-- Main Content Area -->
      <main class="col-md-9 ms-sm-auto col-lg-10 main-content">
        
        <!-- Home Section -->
        <section id="home">
          <h2>Welcome to the Business Directory</h2>
          <p>Discover and review trusted local businesses in your community.</p>
        </section>

        <!-- Categories Section -->
        <section id="categories" class="mt-5">
          <h3>Categories</h3>
          <div class="row" id="categories-list">
            <!-- Dynamically loaded category cards -->
          </div>
        </section>

        <!-- Add Business Section -->
        <section id="add-business" class="mt-5">
          <h3>Add Your Business</h3>
          <p>Want to be listed in our directory? Click below to request an addition.</p>
          <a href="https://forms.google.com/" target="_blank" class="btn btn-primary">Submit Business Request</a>
        </section>

        <!-- About Section -->
        <section id="about" class="mt-5">
          <h3>About</h3>
          <p>This platform helps connect users with verified local businesses and empowers businesses to gain visibility.</p>
        </section>

      </main>
    </div>
  </div>

  <!-- Script to load categories (optional if using data.json) -->
  <script>
    // Example of dynamically loading categories (replace with fetch('data.json') if needed)
    const sampleCategories = ["Food & Beverage", "Tech Services", "Home Repairs", "Health & Wellness"];
    const categoriesList = document.getElementById('categories-list');

    sampleCategories.forEach(category => {
      const col = document.createElement('div');
      col.className = "col-md-4";
      col.innerHTML = `
        <div class="card category-card">
          <div class="card-body">
            <h5 class="card-title">${category}</h5>
            <a href="categories.html?category=${encodeURIComponent(category)}" class="btn btn-outline-primary">View Businesses</a>
          </div>
        </div>
      `;
      categoriesList.appendChild(col);
    });
  </script>

</body>
</html>



